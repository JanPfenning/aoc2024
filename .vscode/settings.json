{
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnPaste": false,
    "editor.formatOnSave": true,
    "eslint.format.enable": true,
    "eslint.run": "onType",
    "[json]": { "editor.formatOnSave": true },
    "[javascript]": { "editor.formatOnSave": true },
    "[typescript]": {
        "editor.formatOnSave": true
    },
    "prettier.tabWidth": 4,
    "jest.runMode": {
        "type": "on-demand"
    }
}
