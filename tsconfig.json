{
    "extends": "@tsconfig/node20/tsconfig.json",
    "compilerOptions": {
        "target": "ES6",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitAny": true,
        "outDir": "dist"
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "dist"]
}
